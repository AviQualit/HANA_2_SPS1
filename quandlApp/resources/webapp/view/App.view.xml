<mvc:View controllerName="quandlApp.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:commons="sap.suite.ui.commons"
	xmlns:lab="it.designfuture.chartjs" xmlns:l="sap.ui.layout">
	<App class="quandleAppStyle">
		<pages>
			<Page showHeader="false"  enableScrolling="true" class="sapUiResponsiveContentPadding">
				<content>
					<HBox class="sapUiContentPadding" width="100%">
					<Text id="commodityTextId" text="Soy" class="sapUiResponsiveMargin commodityName" />
					<Button
					icon="sap-icon://sys-add"
					id="commodityButton"
					type="Transparent"
				class="sapUiSmallMargin selectionButton"
				text="Select Commodity"
				press="handleSelectCommodityDialogPress" />
				<Button
					icon="sap-icon://sys-add"
					id="measureButton"
					type="Transparent"
				class="sapUiSmallMargin selectionButton"
				text="Select Measure"
				press="handleSelectMeasureDialogPress" />
					
					</HBox>
						<VBox class="sapUiContentPadding" width="100%">
						<FlexBox direction="Row" class="sapUiMediumMarginBegin" alignItems="Start">
							<items>
								<Text id="labelCurrentValue" class="myCustomText sapUiSmallMarginEnd" displayOnly="true" wrapping="true" text="currne value ">
									<layoutData>
										<FlexItemData growFactor="0"/>
									</layoutData>
								</Text>
								<Text id="changeFromPreviousValue" class="valueLabelPositiveOption sapUiTinyMarginEnd" displayOnly="true" wrapping="true" text="changeFromPreviousValue ">
									<layoutData>
										<FlexItemData growFactor="0"/>
									</layoutData>
								</Text>
								<Text id="changeFromPreviousPercent" displayOnly="true" wrapping="true" text="changeFromPreviousPercent " >
									<layoutData>
										<FlexItemData growFactor="0"/>
									</layoutData>
								</Text>
							</items>
						</FlexBox>
						<Text id="lastDate" text="lastDate" class="sapUiResponsiveMargin lastUpdate" />
						</VBox>
					
					<l:HorizontalLayout  allowWrapping="true" >
							<Panel hight="60%" width="90%" class="sapUiResponsiveMargin">
							
							<lab:LineChartJS id="productChart" autoAdjustHeight="true" datasets="{temp>/lineChart/datasets}" labels="{temp>/lineChart/labels}"
								titleDisplay="false" titleText="Line Chart Example" onLegendItemClick="onLegendItemClick" onLegendItemHover="onLegendItemHover"
								onClick="onClick" onHover="onHover" tooltipEnabled="true" onAnimationProgress="onAnimationProgress"
								onAnimationComplete="onAnimationComplete" showLines="true" spanGaps="true"></lab:LineChartJS>
								</Panel>
						
						<Panel  visible="false" hight="50%" width="40%" class="sapUiResponsiveMargin">
															<table:Table id="productTable" visibleRowCount="7" minAutoRowCount="5" visibleRowCountMode="Auto" SelectionMode="None">
								<table:columns>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_PRODUCT" filterProperty="_PRODUCT">
										<Label text="_PRODUCT"/>
										<table:template>
											<Text text="{_PRODUCT}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_DATE" filterProperty="_DATE">
										<Label text="Date"/>
										<table:template>
											<Text text="{_DATE}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_OPEN" filterProperty="_OPEN">
										<Label text="_OPEN"/>
										<table:template>
											<Text text="{_OPEN}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_HIGH" filterProperty="_HIGH">
										<Label text="_HIGH"/>
										<table:template>
											<Text text="{_HIGH}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_LOW" filterProperty="_LOW">
										<Label text="_LOW"/>
										<table:template>
											<Text text="{_LOW}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_LAST" filterProperty="_LAST">
										<Label text="_LAST"/>
										<table:template>
											<Text text="{_LAST}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_CHANGE" filterProperty="_CHANGE">
										<Label text="_CHANGE"/>
										<table:template>
											<Text text="{_CHANGE}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_SETTLE" filterProperty="_SETTLE">
										<Label text="_SETTLE"/>
										<table:template>
											<Text text="{_SETTLE}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_VOLUME" filterProperty="_VOLUME">
										<Label text="_VOLUME"/>
										<table:template>
											<Text text="{_VOLUME}"></Text>
										</table:template>
									</table:Column>
									<table:Column width="auto" resizable="true" autoResizable="true" flexible="true" sortProperty="_PREVIOS" filterProperty="_PREVIOS">
										<Label text="_PREVIOS"/>
										<table:template>
											<Text text="{_PREVIOS}"></Text>
										</table:template>
									</table:Column>
								</table:columns>
							</table:Table>
						</Panel>
					</l:HorizontalLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>